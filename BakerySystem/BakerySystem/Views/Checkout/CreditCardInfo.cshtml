@model BakerySystem.Models.BKRY_CREDITCARDINFO
<div class="form-horizontal">
    <h4>Credit Card Info</h4>
    <br>
    <br>
    @Html.ValidationSummary(true, "", new { @class = "text-danger", id = "vs1" })
    <div class="form-group">
        <b> @Html.LabelFor(model => model.cardname, htmlAttributes: new { @class = "control-label" })</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cardname, new { htmlAttributes = new { @class = "form-control",@required="true" } })
            @Html.ValidationMessageFor(model => model.cardname, "", new { @class = "text-danger", })
        </div>
    </div>

    <div class="form-group">
        <b>@Html.LabelFor(model => model.cardnumber, htmlAttributes: new { @class = "control-label" })</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cardnumber, new { htmlAttributes = new { @class = "form-control", @type = "number", @maxlength = "16", @required = "true" } })
            @Html.ValidationMessageFor(model => model.cardnumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b> @Html.LabelFor(model => model.expyear, htmlAttributes: new { @class = "control-label", id = "ed2" })</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.expyear, new { htmlAttributes = new { @class = "form-control", @type = "number", @maxlength = "4", @required = "true" } })
            @Html.ValidationMessageFor(model => model.expyear, "", new { @class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <b> @Html.LabelFor(model => model.cvv, htmlAttributes: new { @class = "control-label" })</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cvv, new { htmlAttributes = new { @class = "form-control", @type = "number", @maxlength = "3", @required = "true" } })
            @Html.ValidationMessageFor(model => model.cvv, "", new { @class = "text-danger" })
        </div>
    </div>

 
</div>
