@model BakerySystem.Models.BKRY_CATEGORY
@{
    Layout = null;
}

<script type="text/javascript">
    $(function () { // will trigger when the document is ready
       $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>

@using (Html.BeginForm("AddOrEdit", "Category", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model=>model.name, new {@class="control-label" })
        @Html.EditorFor(model=>model.name,new { htmlAttributes = new { @class="form-control"} })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.image, new { @class = "control-label" })       
        <input type="file" name="file" style="width:100%"/>
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.publish, new { @class = "control-label" })
        @Html.EditorFor(model => model.publish, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-12">
            <div class="col-md-6" style="width:100%;float:left">
                <input type="submit" value="Save" class="btn btn-outline-primary" style="width:150px;text-indent:hanging" />
            </div>
            <div class="col-md-6" style="width:100%;float:right">               
                <input type="reset" value="Clear" class="btn btn-outline-warning" style="width:150px;text-indent:hanging"  />
            </div>
        </div>
    </div>
  
}