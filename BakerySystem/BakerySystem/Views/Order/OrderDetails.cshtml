<style>

    #divtotal {
        background-color: white;
        width: 200px;
        color: cornflowerblue;
        padding: 25px;
        margin: 25px;
        float: right;
    }
    #OrderDetails {
        border: 0;
        padding: .5em 1em;
        background: #454d55;
        overflow: auto;
        zoom: 1;
    }
    </style>
<div id="OrderDetails">
    <table style="width:100%">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        @{
            decimal total = 0;
            foreach (BakerySystem.Models.BKRY_ITEMS item in Model)
            {
                total += total + (decimal)item.price * (decimal)item.quantity;
                <tr>
                    <th>@item.name</th>
                    <th>@item.quantity</th>
                    <th>@item.price</th>
                    <th><img style="width:70px;height:70px;" src="/Home/getImage2/@item.Id"></th>
                </tr>
            }

        }
    </table>
    <div class="" id="divtotal">Total $ @total</div>
</div>
