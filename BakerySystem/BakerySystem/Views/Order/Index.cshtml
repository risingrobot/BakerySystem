
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <label>Please Enter Order ID to Search</label><input type="number" placeholder="ID" id="orderid">    
    <input type="button" value="Search" Onclick="Search()">
</div>
<div id="DeliveryDetails" hidden>
    <table id="itemsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Image</th>
                <th>Date Added</th>
                <th>Expiry Date</th>
                <th>Editing</th>
            </tr>
        </thead>
    </table>

    <script>
        var Popup, dataTable;
        function Search() {
            alert('haha');
            dataTable = $("#itemsTable").DataTable({
                "ajax": {
                    "url": "/Order/GetOrder",
                    "type": "GET",
                    "data": $('#orderid').val(),
                    "datatype": "json"
                },
                "columns": [
                    { "data": "personname" },
                    { "data": "price" },
                    { "data": "Id", "render": function (data) { return '<img style="width:70px;height:70px;" src="' + "/Home/getImage2/" + data + '" />'; } },
                    { "data": "add_date" }                   

                ],
                "language": {

                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                }
            });
            $('#DeliveryDetails').show();
        }
        </script>
</div>
