@{
    ViewBag.Title = "Home Page";
}
<br>
<br>
<script>
    $(document).ready(function () {
        
        $.get("/Category/GetData", function (response)
        {
            var text = '';
            for (var i = 0; i < response.data.length; i++) {

                text += '<div class="col-lg-3 col-md-6"><div class="single-cat-item"><div class="thumb"> <img style="width:100px;height:100px;" class="img-fluid" src="' + '/Home/getImage/' + response.data[i].Id+'" alt=""></div><a href="#"><h4>' + response.data[i].name+'</h4></a></div></div>';
            }
            $('#Category').html(text);
        });
    });
    </script>
<div id="myCarousel">

    <!-- start banner Area -->

    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row fullscreen d-flex justify-content-center align-items-center">
                <div class="banner-content col-lg-10 col-md-12 justify-content-center">
                    <h6 class="text-uppercase">Whenever we bake, bake with our heart</h6>
                    <h1>
                        Love with baking items
                    </h1>
                </div>
            </div>
            <div class="col-lg-9">
                <h1>
                    We’ve baked every item
                    from the core of our heart to serve you
                </h1>
                <p>
                    <span>We are here to listen from you deliver exellence by any means</span>
                </p>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <img class="about-img" style="width:600px;height:300px; align-content:center" src="~/Images/about-img.png" alt="">
    <!-- Start item-category Area -->
    <section class="item-category-area section-gap">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12 pb-80 header-text text-center">
                    <h3 class="pb-10">Category of available items</h3>

                </div>
            </div>
            <div id="Category" class="row">
            </div>
            <a class="primary-btn mx-auto mt-80" href="#">View Full Menu</a>
        </div>
    </section>

</div>