
@{
    ViewBag.Title = "ShowProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show Profile</h2>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<style>
    .dataTables_length {
    }

        .dataTables_length > select {
            width: 100px;
        }

    select {
        float: left;
    }

    #itemsTable_length {
        width: 600px;
    }

    label {
        float: left;
    }
</style>
<br>

<br>
<table id="itemsTable" class="table table-striped table-bordered table-responsive table-dark" style="width:100%">
    <thead>
        <tr>           
            <th>User Name</th>
            <th>email</th>
            <th>phone</th>
            <th>address</th>
            <th>street</th>
            <th>postCode</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>


<script>
        var Popup, dataTable;
    $(document).ready(function () {       
            dataTable =  $("#itemsTable").DataTable({
                "ajax": {
                    "url": "/SignUp/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [                    
                    { "data": "UserName" },
                    { "data": "email" },
                    { "data": "phone" },
                    { "data": "address" },
                    { "data": "street" },                    
                    { "data": "postCode" },
                    {
                        "data":"UserId" , "render" : function (data) {
                        return "<a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"200px"
                    }

                ],
                "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });



        function Delete(id) {
            if(confirm('Are You Sure to Delete this Items Record ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteUser", "SignUp")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
</script>
